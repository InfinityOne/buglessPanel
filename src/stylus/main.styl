//transition duration
trs-dur = .2s

body
    margin 0

.bugless-panel
    &.left
        transform translateX(-100%)
        left 0
        top 0
    &.right
        transform translateX(100%)
        right 0
        top 0
    &.bottom
        transform translateY(100%)
        bottom 0
        margin auto
        left 0
        right 0
    &.top
        transform translateY(-100%)
        top 0
        margin auto
        left 0
        right 0
    display none
    overflow auto
    -webkit-overflow-scrolling touch
    -moz-overflow-scrolling touch
    overflow-scrolling touch
    will-change transform
    position fixed
    background #bcbcbc
    height 100%
    width 100%
    z-index 1000

.bugless-backdrop
    background #000
    opacity 0
    pointer-events none
    will-change opacity
    transition opacity trs-dur linear
    position fixed
    top 0
    left 0
    width 100%
    height 100%
    z-index 900
    &.in
        opacity .5
        pointer-events all

.animate
    transition transform trs-dur linear
